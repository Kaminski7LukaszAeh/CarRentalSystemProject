@model PaymentViewModel

@{
    ViewData["Title"] = "Płatność";
}

<div class="d-flex justify-content-center mt-5">
    <div class="col-md-6 bg-dark p-5 rounded shadow border border-secondary-subtle">
        <h2 class="mb-4 text-white">Dokonaj płatności</h2>

        <form asp-action="Payment" method="post">
            <input type="hidden" asp-for="ReservationId" />
            <input type="hidden" asp-for="Amount" />

            <div class="mb-3">
                <label class="form-label text-light">Kwota do zapłaty</label>
                <input class="form-control bg-light text-dark" value="@Model.Amount.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)" readonly />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-dark border border-light w-100">Zapłać</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
