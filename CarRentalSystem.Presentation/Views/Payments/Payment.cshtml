@model PaymentViewModel

@{
    ViewData["Title"] = "Płatność";
}

<h2 class="mt-4">Dokonaj płatności</h2>

<form asp-action="Payment" method="post">
    <input type="hidden" asp-for="ReservationId" />

    <!-- Include hidden field for posting the value -->
    <input type="hidden" asp-for="Amount" />

    <div class="mb-3">
        <label class="form-label">Kwota do zapłaty</label>

        <!-- Show the value in a disabled input (not posted to the server) -->
        <input class="form-control" value="@Model.Amount.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)" readonly />

        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Zapłać</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
